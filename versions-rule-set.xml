<ruleset comparisonMethod="maven"
         xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 https://www.mojohaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd">
    <rules>
        <rule groupId="org.postgresql" artifactId="postgresql"
              comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">.*\.jre[6,7]</ignoreVersion>
            </ignoreVersions>
        </rule>
        <rule groupId="org.slf4j" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">2.*</ignoreVersion>
            </ignoreVersions>
        </rule>
        <rule groupId="org.apache.tomcat" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">10.*</ignoreVersion>
            </ignoreVersions>
        </rule>
        <rule groupId="org.hibernate.validator" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">7.*</ignoreVersion>
            </ignoreVersions>
        </rule>
        <rule groupId="org.hibernate" comparisonMethod="maven">
            <ignoreVersions>
                <ignoreVersion type="regex">6.*</ignoreVersion>
            </ignoreVersions>
        </rule>
    </rules>
</ruleset>
