<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>build</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>package</goal>
                
            </goals>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>package</goal>
                
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>war</packaging>
                <packaging>ear</packaging>
                <packaging>ejb</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-resolve javadoc</actionName>
            <displayName>resolve javadoc</displayName>
            <goals>
                <goal>dependency:resolve</goal>
            </goals>
            <properties>
                <classifier>javadoc</classifier>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-snyk</actionName>
            <displayName>snyk</displayName>
            <goals>
                <goal>snyk:test</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-clean-install</actionName>
            <displayName>clean-install</displayName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
        </action>
    </actions>
